<% if @editor.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@editor.errors.count, "error") %>
        prohibited this @editor from being saved:</h2>

    <ul>
        <% @editor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for @editor, html: {class: "form-horizontal", role:"form", multipart: true} do |f| %>

        <div class="field">
            <%= f.label :image %>
            <%= f.file_field :image %>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :name %>
            </div>

            <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :email %>
            </div>

            <div class="col-sm-8">
                <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :company_name %>
            </div>

            <div class="col-sm-8">
                <%= f.text_field :company_name, class: "form-control", placeholder: "Name of company", autofocus: true %>
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :pleft %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :pleft, rows: 10, class: "form-control", placeholder: "Left of editor", autofocus: true %>
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :pcenter %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :pcenter, rows: 10, class: "form-control", placeholder: "Center of editor", autofocus: true %>
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-sm-2">
                <%= f.label :pright %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :pright, rows: 10, class: "form-control", placeholder: "Right of editor", autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        <% end %>

        <div class="col-xs-4 col-xs-offset-4">
            [<%= link_to "Cancel request and return to wiki listing" %>]
        </div>

    </div>
</div>
